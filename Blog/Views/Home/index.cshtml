@model IEnumerable<Blog.Models.ArticleAbstract>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('Content/img/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1 class="title-heading">谢阳洋的博客 Jerry's Blog</h1>
                        <hr class="small">
                        <span class="subheading">套马的汉子 horse's soulmate</span>
                    </div>
                </div>
            </div>
        </div>
    </header>






    <!-- Main Content -->

    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                @foreach (var item in Model) {
                <div class="post-preview">
                    <a href='Article/Index/@item.ArticleID'>
                        <h2 class="post-title">
                           @Html.DisplayFor(modelItem => item.Title)
                        </h2>
                        <h3 class="post-subtitle">
                           @Html.DisplayFor(modelItem =>item.SubTitle)
                        </h3>
                    </a>
                    <p class="post-meta">Posted by <a href="#">@Html.DisplayFor(modelItem=>item.AuthorName)</a> on @Html.DisplayFor(modelItem=>item.PostDate)</p>
                </div>
                <hr>
                }
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="#">Older Posts &rarr;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <hr>

<p> The time is @DateTime.Now</p>