@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}



<h1 class="page-header">
    Dashboard <small>Statistics Overview</small>
</h1>
<ol class="breadcrumb">
    <li class="active">
        <i class="glyphicon glyphicon-dashboard"></i>&nbsp;Dashboard
    </li>
</ol>

<div class="col-sm-12">
    <div class="well">
        <h4>Dashboard</h4>
        <p>Some text..</p>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="well">
                <h4>Post Articles</h4>
                <h3>@ViewBag.totalArticles</h3>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="well">
                <h4>Totoal Comments</h4>
                <h3>@ViewBag.totalComments</h3>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="well">
                <h4>Upload Pictures</h4>
                <h3>@ViewBag.totalUploadPictures</h3>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="well">
                <h4>Current Publish Pictures</h4>
                <h3>@ViewBag.currentPublishPictures</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="well">
                <div>
                    @Html.Action("_ArticleChart_Index", "DashBoard")
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="well">
                <div>
                    @Html.Action("_ArticleCommentChart_Index", "DashBoard")
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-7">
            <div class="well">
                <h4>Comments</h4>
                <table id="replyTable" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Artile</th>
                        <th>Name</th>
                        <th>Country</th>
                        <th>Date</th>
                        <th>ReplyName</th>
                        <th>Detail</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @Html.Action("_CommentTable_Index", "DashBoard")
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="well">
                <h4>Articles</h4>
                <table id="articleTable" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Article</th>
                        <th>CreateDate</th>
                        <th>LastModify</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @Html.Action("_ArticleTable_Index", "DashBoard")
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




<!--Modal part-->

<div class="modal fade" id="replyDetail" tabindex="-1" role="dialog" aria-labelledby="Detail">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="replyDetailTitle"></h4>
            </div>
            <div class="modal-body" id="replyDetailBody">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirm" tabindex="-1" role="dialog" aria-labelledby="Confirm">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="confirmTitle"></h4>
            </div>
            <div class="modal-body" id="confirmBody"></div>
            <div class="modal-footer">
                <button type="button" id="actionButton"></button>
                <button type="button" class="btn btn-default" data-dismiss="modal" id="ConfirmClose">Close</button>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <script src="/Scripts/Chart.js"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<link href="~/Content/css/DataTables/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
<script src="~/Scripts/Dashboard/Index.js"></script>
}